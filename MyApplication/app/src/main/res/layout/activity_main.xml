<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Hello World!"
        android:textColor="#000000"
        android:background="#cde5cc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/txt2"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txt1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="为了更美好的明天"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#ed261d"
        android:background="#555612"
  />
    <TextView
        android:id="@+id/txt3"
        android:layout_marginTop="15dp"
       android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/txt1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="为了更美好的明天"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#000000"
        android:background="#555612"
        />
    <TextView
        android:id="@+id/txt4"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/txt2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="为了更美好的明天"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="#000000"
        android:background="#3ce7ac"
        />

    <TextView
        android:id="@+id/txt5"
        android:layout_toRightOf="@+id/txt4"
        android:layout_marginLeft="10dp"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:layout_below="@+id/txt2"
        android:background="#e7ae3c"
        android:gravity="center"
        android:text="为了更美好的明天"
        android:textColor="#012344"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/txt6"
        android:layout_toRightOf="@+id/txt5"
        android:layout_marginLeft="15dp"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:layout_below="@+id/txt2"
        android:background="#d9e73c"
        android:gravity="center"
        android:text="为了更美好的明天"
        android:textColor="#012344"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/txt7"
        android:layout_toRightOf="@+id/txt6"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:layout_below="@+id/txt2"
        android:background="#4a7857"
        android:gravity="center"
        android:text="为了更美好的明天"
        android:textColor="#e74b3c"
        android:textSize="12sp" />
</RelativeLayout>