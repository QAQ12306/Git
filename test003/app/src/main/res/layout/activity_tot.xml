<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="Helloworld!"
    android:textSize="50sp"
    android:textColor="#EC2442"
    android:gravity="center"
    android:background="#0FF2DC"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="bottom">

    <Button
        android:id="@+id/btn_men1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="#ff0022"
        />
        <Button
            android:id="@+id/btn_men2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#d234"
            />
        <Button
            android:id="@+id/btn_men3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#000000"
            />
        <Button
            android:id="@+id/btn_men4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#668365"

            />



    </LinearLayout>

</RelativeLayout>